<table>
  <thead>
    <tr>
      <td><strong>Title</strong></td>
      <td><strong>Description</strong></td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= (category.title).html_safe %></td>
      <td><%= (category.description).html_safe %></td>
      <td><%= image_tag category.avatar.url(:thumb) %></td>
      <td><%= link_to "Edytuj", edit_category_path(category) %></td>
      <% if current_user.admin? %>
        <td><%= link_to "Usuń", category, method: :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <%= link_to "Dodaj nową kategorię", new_category_path %>
<% end %>

<%= link_to "List all users", users_path %>
<%= link_to "Profil", user_path(current_user) %>