<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nazwa:</strong></dt>
  <dd><%= @category.title %></dd>
  <dt><strong>Opis:</strong></dt>
  <dd><%= (@category.description).html_safe %></dd>
  <dt><strong>Ostatnio edytował:</strong></dt>
  <dd><%= @category.last_contributor %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Powrót", categories_path, :class => 'btn'  %>
  <%= link_to "Edytuj", edit_category_path(@category), :class => 'btn' %>
  <% if current_user.admin? %>
  <%= link_to "Usuń", category_path(@category), :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
