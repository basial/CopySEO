<h2>Zmień hasło</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %> />
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Hasło" %><
  </div>  
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Potwierdzenie hasła"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Zmień hasło!", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
