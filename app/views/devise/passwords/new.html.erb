<h2>Zapomniałeś hasła?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Adres e-mail"%>
  </div>

  <div class="form-group">
    <%= f.submit "Wyślij instrukcję zmiany hasła!", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
