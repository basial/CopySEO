<h2>Zmień hasło</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Adres e-mail" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.epassword_field :password, class: "form-control", placeholder: "Nie wypełniaj, jeśli nie chcesz zmieniać hasła", autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.epassword_field :password_confirmation, class: "form-control", placeholder: "Nie wypełniaj, jeśli nie chcesz zmieniać hasła"%>
  </div>
  <div class="form-group">
    <%= f.password_field :current_password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Zmień hasło", class: "btn btn-success" %>
  </div>
<% end %>