<h1 class="page-header">Użytkownicy</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Adres e-mail</th>
      <th>Admin</th>
      <th>Imię</th>
      <th>Nazwisko</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td>
          <%= link_to "Edytuj", edit_user_path(user), class: 'btn btn-xs btn-default' %>
          <%= link_to "Usuń", user_path(user), method: :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Jesteś pewnien?')) },
                      class: 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nowy użytkownik", new_user_invitation_path, class: 'btn btn-primary' %>
