<%- model_class = User -%>
<div class="page-header">
  <h1><%= @user.full_name %></h1>
</div>

<dl class="dl-horizontal">
  <div class="span9">
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @user.email %></dd>
    <dt><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></dt>
    <dd><%= @user.last_sign_in_at.strftime('%T %F') %></dd>
    <dt><strong><%= model_class.human_attribute_name(:admin) %>:</strong></dt>
    <dd><%= @user.admin %></dd>
    <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
    <dd><%= @user.first_name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
    <dd><%= @user.last_name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
    <dd><%= @user.address %></dd>
    <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
    <dd><%= @user.phone_number %></dd>
  </div>
  <div class="span3">
    <%= image_tag @user.avatar.url(:medium) %>
  </div>
</dl>

<div class="form-actions">
  <% if current_user.admin? %>
  <%= link_to "Powrót", users_path, class: 'btn'  %>
  <%= link_to "Edytuj", edit_user_path(@user), class: 'btn' %>
  <%= link_to "Usuń", user_path(@user), method: :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% else %>
    <%= link_to "Edytuj", edit_user_path(@user), class: 'btn' %>
  <% end %>
</div>
